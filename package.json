{
  "name": "movie-web",
  "version": "1.0.0",
  "description": "movie-web discord bot",
  "main": "dist/main.js",
  "repository": "git@github.com:movie-web/discord-bot.git",
  "author": "castdrian <adrifcastr@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "lint": "eslint src tests --ext ts --fix",
    "format": "prettier --write {src,tests}/**/*.ts",
    "update": "yarn upgrade-interactive",
    "build": "tsc -b src",
    "clean": "tsc -b src --clean",
    "watch": "tsc -b src -w",
    "start": "yarn run build && node dist/main.js",
    "predocker:start": "yarn",
    "docker:start": "yarn start"
  },
  "dependencies": {
    "@sapphire/decorators": "^6.0.1",
    "@sapphire/framework": "^4.5.1",
    "@sapphire/plugin-logger": "^3.0.3",
    "discord.js": "^14.12.1",
    "neat-config": "^2.0.0",
    "tslib": "^2.6.1"
  },
  "devDependencies": {
    "@sapphire/eslint-config": "^4.4.1",
    "@sapphire/prettier-config": "^1.4.5",
    "@sapphire/ts-config": "^4.0.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "pretty-quick": "^3.1.3",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
  },
  "prettier": "@sapphire/prettier-config",
  "imports": {
    "#src/*": "./dist/*.js"
  }
}
