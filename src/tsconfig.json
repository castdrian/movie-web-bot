{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "../dist",
	"module": "NodeNext",
    "target": "ESNext",
    "composite": true,
    "preserveConstEnums": true,
    "ignoreDeprecations": "5.0",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "#src/*": ["./*"]
    }
  },
  "include": ["."]
}
